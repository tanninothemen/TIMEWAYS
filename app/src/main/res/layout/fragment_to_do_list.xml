<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#ffefc4">

    <Spinner
        android:id="@+id/spinnerToDoListStatusWork"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/main_color_2"
        android:paddingLeft="25dp" />

    <ListView
        android:divider="#ffefc4"
        android:dividerHeight="5dp"
        android:id="@+id/listViewToDoList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="8" />

    <ImageButton
        android:id="@+id/imageButtonAddWorkToDoList"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/round_add_circle_black_18dp"
        app:backgroundTint="@color/main_color_2" />
</LinearLayout>
